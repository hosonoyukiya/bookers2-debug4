<h2>Book search for "<%= params[:word] %>" </h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <thead>
      <tr></tr>
        <td></td>
        <td>Name</td>
        <td>Introduction</td>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to user_path(user) do %><%= user.name %><% end %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
        <thead>
          <tr></tr>
            <td></td>
            <td>Title</td>
            <td>Opinion</td>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>